{
  "include": ["src"],
  "exclude": ["**/dist", "**/node_modules", "**/test"],
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "baseUrl": "."
  }
}
