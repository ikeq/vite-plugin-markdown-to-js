{
  "include": ["src"],
  "compilerOptions": {
    "outDir": "dist/types",
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "sourceMap": false,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "rootDir": "src",
    "skipLibCheck": true
  }
}
